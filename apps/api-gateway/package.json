{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for the Player Platform Suite",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@hono/node-server": "^1.3.0",
    "@player-platform-suite/config": "workspace:*",
    "@player-platform-suite/database": "workspace:*",
    "@player-platform-suite/errors": "workspace:*",
    "@player-platform-suite/logger": "workspace:*",
    "@player-platform-suite/shared-types": "workspace:*",
    "hono": "^3.10.0",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
